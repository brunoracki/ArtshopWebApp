        @using (var context = new Artgallery981Context())
        {
            var list = context.Djelos.ToList();
            foreach (var djelo in list)
            {   
                <section>
                <button type="button" class="btn btn-primary">@djelo.Natpisdjelo</button>
                <button type="button" class="btn btn-primary">@djelo.Cijenadjelo</button>
